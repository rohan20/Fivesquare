<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.rohan.fivesquare.VenuesListFragment">

    <RelativeLayout
        android:id="@+id/header_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/fivesquare_title_text_view_venues_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:fontFamily="serif"
            android:text="@string/app_name"
            android:textSize="25sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:layout_below="@id/fivesquare_title_text_view_venues_list"
            android:background="@color/colorPrimary" />

    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/venues_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_relative_layout"
        android:layout_marginTop="10dp" />


</RelativeLayout>
