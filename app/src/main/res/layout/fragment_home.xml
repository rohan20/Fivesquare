<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingEnd="10dp"
    android:paddingStart="10dp"
    tools:context="com.rohan.fivesquare.HomeFragment">

    <RelativeLayout
        android:id="@+id/main_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/header_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/fivesquare_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:fontFamily="serif"
                android:text="@string/app_name"
                android:textSize="25sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.25dp"
                android:layout_below="@id/fivesquare_title_text_view"
                android:background="@color/colorPrimary" />

        </RelativeLayout>


        <TextView
            android:id="@+id/select_location_text_view_home_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header_relative_layout"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_corner_background"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_my_location_grey_500_18dp"
            android:fontFamily="serif"
            android:hint="Select your location"
            android:padding="10dp"
            android:textSize="18sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/select_location_text_view_home_fragment"
            android:layout_marginTop="40dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/food_nightlife_linear_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/food_icon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/food"
                        android:fontFamily="serif"
                        android:gravity="center"
                        android:text="Food"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/nightlife_icon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/nightlife"
                        android:fontFamily="serif"
                        android:gravity="center"
                        android:text="Nightlife"
                        android:textSize="18sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/event_movie_linear_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/food_nightlife_linear_layout"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/events_icon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/event"
                        android:fontFamily="serif"
                        android:gravity="center"
                        android:text="Events"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/movies_icon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/movie_theater"
                        android:fontFamily="serif"
                        android:gravity="center"
                        android:text="Movies"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/gym_hotels_linear_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/event_movie_linear_layout"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/gym_icon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/gym4"
                        android:fontFamily="serif"
                        android:gravity="center"
                        android:text="Gym"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/hotels_icon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/hotel"
                        android:fontFamily="serif"
                        android:gravity="center"
                        android:text="Hotels"
                        android:textSize="18sp" />

                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
