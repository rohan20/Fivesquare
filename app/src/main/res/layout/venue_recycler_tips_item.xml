<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/venue_item_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardElevation="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="10dp">

            <ImageView
                android:id="@+id/icon_image_view"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/food" />

            <com.varunest.sparkbutton.SparkButton
                android:id="@+id/spark_button_favourite"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="5dp"
                android:layout_toLeftOf="@id/icon_image_view"
                app:sparkbutton_activeImage="@drawable/ic_favorite_red_700_18dp"
                app:sparkbutton_iconSize="30dp"
                app:sparkbutton_inActiveImage="@drawable/ic_favorite_grey_300_18dp"
                app:sparkbutton_primaryColor="@color/colorPrimary"
                app:sparkbutton_secondaryColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/name_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@id/spark_button_favourite"
                android:fontFamily="serif"
                android:gravity="start"
                android:text="Kent's Naraina"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/category_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_text_view"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@id/spark_button_favourite"
                android:fontFamily="serif"
                android:gravity="start"
                android:text="Burger Joint"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/address_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/category_text_view"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@id/spark_button_favourite"
                android:fontFamily="serif"
                android:gravity="start"
                android:text="Community Centre (Naraina), New Delhi"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/distance_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@id/address_text_view"
                android:fontFamily="serif"
                android:text="25 meters"
                android:textSize="12sp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>